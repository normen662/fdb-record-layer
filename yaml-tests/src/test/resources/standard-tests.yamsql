---
schema_template:
    create table t1(a bigint, b bigint, c bigint, x bigint, id string, primary key(id))
    create index i1 as select a, b, c from t1 order by a, b, c
    create index i2 as select a, x, c from t1 order by a, x, c
---
test_block:
  name: standard-tests
  tests:
    -
      - query: select *
               from t1
               where a = 0 AND b = 30 AND x = 50 AND c = 100
               order by a, c
      - explain: "ISCAN(I2 [EQUALS promote(@c8 AS LONG), EQUALS promote(@c16 AS LONG), EQUALS promote(@c20 AS LONG)]) âˆ© ISCAN(I1 [EQUALS promote(@c8 AS LONG), EQUALS promote(@c12 AS LONG), EQUALS promote(@c20 AS LONG)]) COMPARE BY (recordType(_), _.ID)"

...
